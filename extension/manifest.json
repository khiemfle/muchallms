{
  "name": "Muchallms Grid Controller",
  "version": "0.2.8",
  "manifest_version": 3,
  "description": "Manage multiple LLM windows in a grid and broadcast prompts.",
  "action": {
    "default_title": "Muchallms Control",
    "default_icon": {
      "16": "src/icon-16.png",
      "32": "src/icon-32.png",
      "48": "src/icon-48.png",
      "128": "src/icon-128.png"
    }
  },
  "icons": {
    "16": "src/icon-16.png",
    "32": "src/icon-32.png",
    "48": "src/icon-48.png",
    "128": "src/icon-128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "system.display"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://grok.com/*",
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
